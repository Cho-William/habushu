<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>habushu</role-hint>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
			<configuration>
				<!-- NOTE: when changing these, it will take two builds to see them in 
					action as the next build will have the habushu-mixology project bound to 
					the *current* lifecycle. If you break this, it means you need to pull habushu-mixology 
					out of the build until you repair the issue. -->
				<lifecycles>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:validate-pyenv-and-poetry</validate>
							<initialize>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:initialize-habushu</initialize>
							<compile>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:install-dependencies</compile>
							<process-classes>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:format-python</process-classes>
							<test>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:behave-bdd-test</test>
							<package>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:build-archive</package>
							<deploy>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:publish-to-pypi-repo</deploy>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>clean</id>
						<phases>
							<clean>org.bitbucket.cpointe.habushu:habushu-maven-plugin:${project.version}:clean-habushu</clean>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
	</components>
</component-set>